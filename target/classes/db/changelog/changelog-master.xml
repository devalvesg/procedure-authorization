<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1-create-procedure-rule" author="developer">
        <createTable tableName="rule_procedure">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="procedure_code" type="VARCHAR(4)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="CHAR(1)">
                <constraints nullable="false"/>
            </column>
            <column name="is_authorized" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="rule_procedure"
                columnNames="procedure_code, age, gender"
                constraintName="uk_procedure_age_gender"/>
    </changeSet>

    <changeSet id="1.1-add-check-gender" author="developer">
        <sql>
            ALTER TABLE rule_procedure
                ADD CONSTRAINT ck_gender CHECK (gender IN ('M', 'F'))
        </sql>
        <rollback>
            ALTER TABLE rule_procedure DROP CONSTRAINT ck_gender
        </rollback>
    </changeSet>

    <changeSet id="2-insert-initial-rules" author="developer">
        <insert tableName="rule_procedure">
            <column name="procedure_code" value="1234"/>
            <column name="age" valueNumeric="10"/>
            <column name="gender" value="M"/>
            <column name="is_authorized" valueBoolean="false"/>
        </insert>

        <insert tableName="rule_procedure">
            <column name="procedure_code" value="4567"/>
            <column name="age" valueNumeric="20"/>
            <column name="gender" value="M"/>
            <column name="is_authorized" valueBoolean="true"/>
        </insert>

        <insert tableName="rule_procedure">
            <column name="procedure_code" value="6789"/>
            <column name="age" valueNumeric="10"/>
            <column name="gender" value="F"/>
            <column name="is_authorized" valueBoolean="false"/>
        </insert>

        <insert tableName="rule_procedure">
            <column name="procedure_code" value="6789"/>
            <column name="age" valueNumeric="10"/>
            <column name="gender" value="M"/>
            <column name="is_authorized" valueBoolean="true"/>
        </insert>

        <insert tableName="rule_procedure">
            <column name="procedure_code" value="1234"/>
            <column name="age" valueNumeric="20"/>
            <column name="gender" value="M"/>
            <column name="is_authorized" valueBoolean="true"/>
        </insert>

        <insert tableName="rule_procedure">
            <column name="procedure_code" value="4567"/>
            <column name="age" valueNumeric="30"/>
            <column name="gender" value="F"/>
            <column name="is_authorized" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet id="3-create-authorization-request" author="developer">
        <createTable tableName="authorization_request">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="procedure_code" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="patient_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="patient_age" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="patient_gender" type="CHAR(1)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="justification" type="TEXT"/>
            <column name="request_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3.1-add-check-constraints" author="developer">
        <sql>
            ALTER TABLE authorization_request
                ADD CONSTRAINT ck_patient_gender CHECK (patient_gender IN ('M', 'F'));

            ALTER TABLE authorization_request
                ADD CONSTRAINT ck_status CHECK (status IN ('APROVADO', 'NEGADO'));
        </sql>
        <rollback>
            ALTER TABLE authorization_request DROP CONSTRAINT ck_patient_gender;
            ALTER TABLE authorization_request DROP CONSTRAINT ck_status;
        </rollback>
    </changeSet>

    <changeSet id="4-create-indexes" author="developer">
        <createIndex tableName="rule_procedure" indexName="idx_procedure_code">
            <column name="procedure_code"/>
        </createIndex>

        <createIndex tableName="authorization_request" indexName="idx_request_date">
            <column name="request_date"/>
        </createIndex>

        <createIndex tableName="authorization_request" indexName="idx_status">
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>